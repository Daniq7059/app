<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity"
    android:background="@color/fondo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Bienvenido a nuestra comunidad"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:src="@drawable/liena"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-15dp"/>
        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Accede a tus cursos desde cualquier lugar."
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            />
        <ImageView
            android:layout_width="310dp"
            android:layout_height="318dp"
            android:src="@drawable/iniciouno"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnInicioSesion"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Iniciar sesiÃ³n"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:drawableEnd="@drawable/flecha"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
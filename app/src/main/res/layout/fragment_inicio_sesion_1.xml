<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿OLVIDASTE TU CONTRASEÑA?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="321dp"
            android:layout_height="308dp"
            android:src="@drawable/olvidar"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="286dp"
            android:layout_height="48dp"
            android:text="Ingrese la dirección de correo
electrónico asociada con su cuenta"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="286dp"
            android:layout_height="48dp"
            android:text="Le enviaremos por correo electrónico un código para reestablecer su contraseña"
            android:textColor="#2E3C52"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="286dp"
            android:layout_height="48dp"
            android:text="Introducir la dirección de correo electrónico"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="12dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linealarga"/>
        <Button
            android:layout_width="161dp"
            android:layout_height="64dp"
            android:text="Enviar"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="48dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>